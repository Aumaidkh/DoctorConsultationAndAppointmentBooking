<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".presentation.ui.doctor_counseling.PaymentSuccessActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/btnBack"
            layout="@layout/card_back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Payment"
            android:textColor="@color/black"
            android:textSize="@dimen/bold_heading1" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_white_rectangle"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/chat_dots_fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Payment Success"
            android:textColor="@color/black"
            android:textSize="@dimen/bold_heading1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gilroy_medium"
            android:text="You have successfully booked on appointment with"
            android:textAlignment="center"
            android:textSize="@dimen/semi_bold_title1" />

        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gilroy_medium"
            android:text="Dr. Alisa Dewali"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_bold_title1" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/round_white_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/iconPeople"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/people"
                app:tint="@color/primary_color" />

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iconPeople"
                android:fontFamily="@font/gilroy_medium"
                android:text="Dr. Alisa Dewali"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/semi_bold_title1" />

            <ImageView
                android:id="@+id/iconWallet"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tvPatientName"
                android:src="@drawable/wallet_fill"
                app:tint="@color/primary_color" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iconWallet"
                android:fontFamily="@font/gilroy_medium"
                android:text="200 Rs"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/semi_bold_title1" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/iconCalendar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/calendar_week"
                app:tint="@color/primary_color" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_toEndOf="@id/iconCalendar"
                android:fontFamily="@font/gilroy_medium"
                android:text="24 Jan 2022"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/semi_bold_title1" />

            <ImageView
                android:id="@+id/clockIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/tvDate"
                android:src="@drawable/clock_fill"
                app:tint="@color/primary_color" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/clockIcon"
                android:fontFamily="@font/gilroy_medium"
                android:text="10:00 am"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/semi_bold_title1" />


        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_margin="24dp"
        style="@style/CustomButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="See Appointment"
        app:layout_constraintBottom_toTopOf="@+id/btnDashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDashboard"
        android:layout_margin="24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:strokeColor="@color/primary_color"
        app:cornerRadius="15dp"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>